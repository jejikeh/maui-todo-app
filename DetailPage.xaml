<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyMauiApp.DetailPage"
             xmlns:viewmode="clr-namespace:MyMauiApp.ViewModel"
             x:DataType="viewmode:DetailViewModel"
             Title="Details">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text ="{Binding Text}" FontSize="25" VerticalOptions="Center" HorizontalOptions="Center" />
            
            <Button Text = "Go Back" Command="{Binding GoBackCommand}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>